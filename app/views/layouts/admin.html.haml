!!!
%html{lang: "en-us"}
  %head
    %meta{charset: "utf-8"}/
    -#/ <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    %meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", name: "viewport"}/
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    %link{href: "/assets/css/bootstrap.min.css", media: "screen", rel: "stylesheet", type: "text/css", "data-turbolinks-track" => true}/
    %link{href: "/assets/css/font-awesome.min.css", media: "screen", rel: "stylesheet", type: "text/css", "data-turbolinks-track" => true}/
    -# We recommend you use "your_style.css" to override SmartAdmin
    -# Demo purpose only goes with "demo.js", you can delete this css when designing your own WebApp
    -# SmartAdmin Styles : Caution! DO NOT change the order 
    %link{href: "/assets/css/smartadmin-production-plugins.min.css", media: "screen", rel: "stylesheet", type: "text/css", "data-turbolinks-track" => true}/
    %link{href: "/assets/css/smartadmin-production.min.css", media: "screen", rel: "stylesheet", type: "text/css", "data-turbolinks-track" => true}/
    %link{href: "/assets/css/smartadmin-skins.min.css", media: "screen", rel: "stylesheet", type: "text/css", "data-turbolinks-track" => true}/
    %link{:href => "/assets/img/favicon/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}/
    %link{:href => "/assets/img/favicon/favicon.ico", :rel => "icon", :type => "image/x-icon"}/
    -# SmartAdmin RTL Support is under construction
    -# %link{href: "/assets/css/smartadmin-rtl.min.css", media: "screen", rel: "stylesheet", type: "text/css", "data-turbolinks-track" => true}/
    = yield :css_to_include

    %script{:src => "/assets/js/jquery-2.0.2.min.js", "data-turbolinks-track" => 'true'}
    %script{:src => "/assets/js/jquery-ui-1.10.3.min.js", "data-turbolinks-track" => 'true'}
    %script{src: "/assets/js/bootstrap.min.js","data-turbolinks-track" => 'true'}
    %script{src: "/assets/js/clipboard.min.js","data-turbolinks-track" => 'true'}
    -# smartadmin
    %script{:src => "/assets/js/SmartNotification.min.js", "data-turbolinks-track" => 'true'}
    %script{:src => "/assets/js/jarvis.widget.min.js", "data-turbolinks-track" => 'true'}
    %script{:src => "/assets/js/demo.js", "data-turbolinks-track" => 'true'}
    %script{:src => "/assets/js/app.js", "data-turbolinks-track" => 'true'}
    
    = yield :js_to_include
    = csrf_meta_tags
  %body
    = render partial: '/smart_admin/header', cached: (Rails.env == 'production')
    = render partial: "/smart_admin/shortcut"
    = render partial: '/smart_admin/left_bar', cached: (Rails.env == 'production')

    -#/ MAIN PANEL
    #main{role: "main"}
      = render '/smart_admin/breadcrumbs'
      #content
        =# render '/share/flash_notice'
        = yield

